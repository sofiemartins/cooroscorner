<div class="comic-section">
  <h1 class="site-headline">New background</h1>
  <%= form_for(:background, url: background_path) do |f| %>

  <%= f.label :label %><br />
  <%= f.text_field :label %><br />

  <%= f.label :image %><br />
  <%= f.file_field :image, multiple: false %><br />
  <br />

  <%= f.submit "Save", class: "button" %>

  <% end %>
</div>
