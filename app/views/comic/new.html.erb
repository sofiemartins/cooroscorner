  <body class="alien">
    <div class="comic-section">
      <h1 class="site-headline">Upload new image</h1>
      <%= form_for(:comic, url: upload_path) do |f| %>

        <%= f.label :title %><br />
        <%= f.text_field :title %><br />

        <%= f.label :category %><br />
        <%= f.select :category, category_labels %><br /> 

        <%= f.label :authors_comment %><br />
        <%= f.text_area :authors_comment, cols: 40, rows: 5 %>
        <br />

        <%= f.label :image %><br />
        <%= f.file_field :image, multiple: false %>
        <br />

        <%= f.submit "Save", class: "button" %>
      <% end %>
    </div>
  </body>
