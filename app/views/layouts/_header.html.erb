<div class="navbar">
  <div class="container">
    <nav>
      <ul class="nav">
        <li><%= link_to image_tag("logo.png", alt: "Cooro's Corner"), root_path, id: "logo" %></li>
        <li class="comic-list-item"><%= link_to "Comic", '', id: "comic" %>
	  <ul class="submenu-comics">
            <% Category.all.each do |category| %>
            <li><%= link_to "#{category.label}", "#{category.short}" %></li>
            <% end %>
          </ul>
	</li>

        <li class="archive"><%= link_to "Archive", archive_path %></li>
        <li class="about"><%= link_to "About", about_path %></li>
        <% if user_signed_in? %>
         <li class="log-in-list-item"><%= link_to current_user.username %>
            <ul class="submenu-logged-in">
	      <li><%= link_to "preferences", preferences_path %></li>
	      <li><%= link_to "logout", logout_path %></li>
	    </ul>
          </li>
          
        <% else %>
          <li class="login"><%= link_to "Login", login_path %></li>
        <% end %><br>
	<hr id="header-bar" />
      </ul>
    </nav>
  </div>
</div>

