<div class="comic-section">
  <h1 class="site-headline">New category</h1>
  <%= form_for(:category, url: category_path) do |f| %>
 
    <%= f.label :label %><br />
    <%= f.text_field :label %><br />

    <%= f.label :background %><br />
    <%= f.select :background, array_of_background_labels %><br />

    <%= f.submit "Save", class: "login-button" %>
  <% end %>

</div>
