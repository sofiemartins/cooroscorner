<body class="tina">
  <div class="comic-section">
    <h1 class="site-headline">edit category</h1>

    <%= form_for(:edit, url: "/edit/category/:short") do |f| %>

      <% current_category = Category.find_by(:short => params[:short]) %>
 
      <%= f.label :label %><br />
      <%= f.text_field :label, value: current_category.label %><br />

      <%= f.label "Abbreviation" %><br />
      <%= f.text_field :short, value: current_category.short %><br />

      <%= f.label :background %><br />
      <%= f.file_field :background, multiple: false, value: current_category.background %><br />

      <%= f.submit "save changes", class: "login-button" %>

    <% end %>
  </div>
</body>
