<body class="tina">
  <div class="comic-section">
    <h1 class="site-headline">edit user</h1>

    <%= form_for(:edit, url: "/edit/password") do |f| %>

      <%= f.label "old password (leave empty when not changing password)"%><br />
      <%= f.password_field :old_password, autocomplete: "off" %><br />

      <%= f.label "new password (leave empty when not changing password)" %><br />
      <%= f.password_field :new_password, autocomplete: "off" %><br />
  
      <%= f.label "new password (confirmation, leave empty when not changing password)" %><br />
      <%= f.password_field :new_password_confirmation, autocomplete: "off" %><br />

      <%= f.submit "save changes", class: "button" %>

    <% end %>
  </div>
</body> 
