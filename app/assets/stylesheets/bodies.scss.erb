body {
  min-width: 1000px;
  background-repeat: no-repeat;
  background-size: cover;
}


<% Background.all.each do |background| %>
  body.<%= background.label %> {
    background-image: image-url(<%= background.label %>.jpg);
    background-repeat: no-repeat;
    background-size: auto 100%;
  }
<% end %>

body.index {
  background-image: image-url("index.jpg");
  background-repeat: no-repeat;
  background-size: auto 100%;
  height: 1000px;
}

body.tina {
  background-image: image-url("tina.jpg");
  background-repeat: no-repeat;
  background-size: cover;
  background-position: -700px -80px;
}

body.alien {
  background-image: image-url("alien.jpg");
  background-repeat: no-repeat;
  background-size: cover;
  background-position: -30% -10%;
  background-color: #45D1E2;
  div.navbar {
    color: #EEEEEE;
  }
}

body.not_found {
  background-image: image-url("404.jpg");
  background-repeat: no-repeat;
  background-size: cover;
}
body.black {
  background-color: #222222;
}
