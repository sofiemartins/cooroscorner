$green: #008811;

/* general */
* {
  font-family: "Times New Roman";
  margin: 0;
  padding: 0;
}

/* logo */
#logo {
  margin-right: 50px;
  display: block;
  float: left;
  color: $green;
  font-size: 200%;
  text-decoration: none;
}

#logo-img {
  float: left;
  height: 150px;
}

hr.header-bar {
  padding: 0;
  border: 0;
  background-color: black;
}

ul.nav {
  margin-left: 2%;
  margin-right: 2%;
  text-align: right;
  list-style-type: none;
  margin-top: 1%;
  padding: 0;
}

div.container{
  height: 150px;
  font-size: 200%;
  ul.nav li {
    padding-left: 5px;
    display: inline;
    font-size: 80%;
  }
  a:link {
    color: #888888;
    text-decoration: none;
  }
  a:visited {
    color: #888888;
  }
  a:hover{
    color: #111111;
  }
  a:active{
    color: #000000;
  }
}

.submenu-comics {
  display: none;
  text-align: right;
  float: right;
  font-size: 80%;
  padding: 30px 0 30px 30px;
  top: 35px;
  right: 2%;
  position: absolute;
  li {
    list-style-type: none;
    display: none;
  }
}

li.comic-list-item:hover > .submenu-comics {
  display: block;
  li {
    display: list-item;
  }
}

.submenu-logged-in {
  display: none;
  text-align: right;
  float: right;
  font-size: 80%;
  padding: 30px 0 30px 30px;
  top: 35px;
  right: 2%;
  position: absolute;
  li {
    list-style-type: none;
    display: none;
  }
}

li.log-in-list-item:hover > .submenu-logged-in {
  display: block;
  li {
    display: list-item;
  }
}

